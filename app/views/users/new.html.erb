<%= form_with model: @user, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password, placefolder: 'パスワードは6文字以上' %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, placeholder: 'パスワードは6文字以上' %>
  <%= f.submit "登録" %>
<% end %>
