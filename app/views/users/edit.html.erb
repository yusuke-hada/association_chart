<div class="min-vh-100 d-flex justify-content-center align-items-center">
  <div class="container align-items-center">
    <div class="row">
      <div class="col-md-6 offset-md-3 p-4 " style="border-radius: 8px; box-shadow: 0px 0px 15px rgba(0,0,0,0.1);">
        <h1 class='d-flex justify-content-center font-weight-bold' style="font-size: 2.5rem;">
          <%= t('views.user.edit.title') %>
        </h1>
        <%= form_with model: @user, local: true do |f| %>
          <div class="form-group mt-4 ">
            <%= f.label :name ,t('activerecord.attributes.user.name') %>
            <%= f.text_field :name, class:'form-control' %>
          </div>
          <div class="form-group text-center mt-3 mb-3">
            <%= f.submit  t('views.user.edit.update_button'), class: 'btn btn-primary' %>
            <%= link_to t('views.user.edit.cancel_button'), user_path(@user), class: 'btn btn-danger' %> 
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>