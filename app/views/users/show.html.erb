<div class="min-vh-100 d-flex justify-content-center align-items-center">
  <div class="container align-items-center">
    <div class="row">
      <div class="col-md-6 offset-md-3 p-4 " style="border-radius: 8px; box-shadow: 0px 0px 15px rgba(0,0,0,0.1);">
        <h1 class='d-flex justify-content-center font-weight-bold' style="font-size: 2.5rem;"><%= t('views.user.show.title') %></h1>
        <h3 class="font-weight-light mt-3" style="letter-spacing: 1px;"><%= t('views.user.show.name') %>
          <span><%= current_user.name %></span>
        </h3>
        <div class="d-flex justify-content-center mt-5">
          <%= link_to t('views.user.show.edit_button'), edit_user_path(current_user), class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
</div>
