<div class="min-vh-100 d-flex justify-content-center align-items-center">
  <div class="container mt-5 align-items-center">
    <div class="row">
      <div class="col-md-7 offset-md-3 border border-5">
      <h1 class='d-flex justify-content-center mt-3'><%= t('views.login.title') %></h1>
        <%= form_with url: login_path, method: :post do |f| %>
          <div class="form-group mt-4">
            <%= f.label :email, t('views.login.email') %>
            <%= f.text_field :email, class:'form-control' %>
          </div>
          <div class="form-group mt-4">
            <%= f.label :password, t('views.login.password') %>
            <%= f.password_field :password, class:'form-control' %>
          </div>
          <div class="form-group text-center mt-3 mb-3">
            <%= f.submit t('views.login.submit_button'), class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>